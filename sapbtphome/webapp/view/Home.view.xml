<mvc:View
    controllerName="dfunez.sapbtphome.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
>

    <tnt:ToolPage id="rootPage">
        <tnt:header>
            <tnt:ToolHeader>
                <Button id="sideNavigationToggleMenu" icon="sap-icon://menu2">
                <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow"/>
                </layoutData>
                </Button>

                <Image src=""/>
                <Link text="SAP BTP Cookpit" class="btpTitle"/>
                
                <ToolbarSpacer/>
                
                <Button icon="sap-icon://slim-arrow-down" text="David" type="Transparent" iconFirst="false">
                <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow"/>
                </layoutData>
                </Button>
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:sideContent>
            <tnt:SideNavigation expanded="true"> 
                <tnt:NavigationList items="{path: '/navigation'}">
                    <tnt:NavigationListItem text="{title}" icon="{icon}" key="{key}" items="{items}">
                        <tnt:NavigationListItem text="{title}" key="{key}">
                        </tnt:NavigationListItem>
                    </tnt:NavigationListItem>
                </tnt:NavigationList>

                <tnt:fixedItem>
                    <tnt:NavigationList items="{path: '/fixednavigation'}">
                       <tnt:NavigationListItem text="{title}" key="{key}" icon="{icon}">
                        </tnt:NavigationListItem>
                    </tnt:NavigationList>
                </tnt:fixedItem>
            </tnt:SideNavigation>
        </tnt:sideContent>

        <tnt:mainContents>
            <NavContainer id="pageContainer">
                <pages>
                    <VBox width="100%" height="100%" >
                        <HBox renderType="Bare" class="bareClass">
                            <!-- <Breadcrumbs>
                                <Link text="Trial home"/>
                                <Link text="4f90fb3etrial"/>
                            </Breadcrumbs> -->
                            <HBox>
                                <HBox alignItems="Center" renderType="Bare">
                                     <Link text="Trial home /"/>
                                     <Link text=" 4f90fb3etrial"/>
                                </HBox>
                            </HBox>
                        </HBox>
                    </VBox>
                </pages>
            </NavContainer>
        </tnt:mainContents>

    </tnt:ToolPage>

	<!-- <Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content />
				</Page>
			</pages>
		</App>
	</Shell> -->
</mvc:View>
